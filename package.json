{
  "name": "slotswapper",
  "version": "1.0.0",
  "description": "A peer-to-peer time-slot scheduling application",
  "main": "index.js",
  "scripts": {
    "setup": "node setup-local.js",
    "setup-atlas": "node setup-mongodb-atlas.js",
    "check-mongo": "cd backend && node check-mongodb.js",
    "dev": "node start-dev.js",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "build": "npm run build:backend && npm run build:frontend",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "deploy:prep": "node prepare-deployment.js",
    "install-all": "npm install && cd backend && npm install && cd ../frontend && npm install",
    "test:api": "curl http://localhost:5000/api/health"
  },
  "keywords": ["scheduling", "calendar", "swap", "slots"],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
